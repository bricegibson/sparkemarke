<!DOCTYPE html>
<html>
<head>
  <title>Teacher Dashboard - SparkeMarke</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body class="container mt-4">

    <header class="d-flex justify-content-between align-items-center mb-4">
    <h2>Welcome, <%= loggedInName %>!</h2>
    <a href="/teacher-logout" class="btn btn-outline-secondary btn-sm">Logout</a>
    </header>

    <h3><%= teacher.teacherGradeLevel || "(Grade Level Not set)" %> Grade, <%= teacher.schoolName || "(School Not Set)" %></h3>
    <hr>

    <a href="/teacher/<%= teacher.teacherID %>/password" class="btn btn-warning btn-sm">Change Password</a>
    <a href="/teacher/<%= teacher.teacherID %>/stats" class="btn btn-warning btn-sm">View Classroom Stats</a>

    <% if (loggedInTeacherId === teacher.teacherID) { %>

        <!-- Generate Access Code -->
        <h3 class="mt-4">Student Access Code</h3>
        <form action="/teacher/<%= teacher.teacherID %>/new-code" method="POST">
        <button type="submit" class="btn btn-warning">Generate New Code</button>
        </form>

        <ul class="list-group mt-3">
        <% codes.forEach(c => { %>
            <li class="list-group-item">
            Code: <strong><%= c.codeText %></strong> 
            (Created: <%= new Date(c.codeCreatedDate).toLocaleString() %>)
            * Codes are only valid for 24 hours.
            </li>
        <% }) %>
        </ul>


        <!-- Add Student Form -->
        <h3 class="mt-4">Add Student</h3>
        <form action="/teacher/<%= teacher.teacherID %>/add-student" method="POST" class="row g-3 mb-4">
            <div class="col-md-4">
            <label for="studentId" class="form-label">Student ID</label>
            <input type="text" class="form-control" id="studentId" name="studentId" required>
            </div>
            <div class="col-md-6">
            <label for="studentName" class="form-label">Student Name</label>
            <input type="text" class="form-control" id="studentName" name="studentName" required>
            </div>
            <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">Add</button>
            </div>
        </form>

        <!-- Student List -->
        <h3>Students</h3>
        <ul class="list-group">
            <% if (students && students.length > 0) { %>
            <% students.forEach(function(student) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= student.studentName %> (ID: <%= student.studentID %>)
                <div>
                    <a href="/entry/<%= student.studentID %>" class="btn btn-sm btn-primary me-2">Entry</a>
                    <a href="/stats/<%= student.studentID %>" class="btn btn-primary btn-sm me-2">Stats</a>
                    <form action="/teacher/<%= teacher.teacherID %>/delete-student/<%= student.studentID %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è</button>
                    </form>

                    <button type="button" class="btn btn-sm btn-outline-primary"
                            data-bs-toggle="modal"
                            data-bs-target="#editStudentModal"
                            data-student-id="<%= student.studentID %>"
                            data-student-name="<%= student.studentName %>">
                    ‚úèÔ∏è
                    </button>

                </div>
                </li>
            <% }) %>
            <% } else { %>
            <li class="list-group-item">No students added yet.</li>
            <% } %>
        </ul>
    <% } %>

  <div class="mt-4">
    <a href="/" class="btn btn-secondary">Back to Teachers</a>
  </div>

    <!-- Edit Student Modal -->
    <div class="modal fade" id="editStudentModal" tabindex="-1" aria-labelledby="editStudentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="editStudentForm" method="POST">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="editStudentModalLabel">Edit Student</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            <input type="hidden" name="studentId" id="editStudentId">
            <div class="mb-3">
                <label for="editStudentName" class="form-label">Student Name</label>
                <input type="text" class="form-control" name="studentName" id="editStudentName" required>
            </div>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
        </form>
    </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
    const editModal = document.getElementById('editStudentModal');
        editModal.addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;
            const studentId = button.getAttribute('data-student-id');
            const studentName = button.getAttribute('data-student-name');

            document.getElementById('editStudentId').value = studentId;
            document.getElementById('editStudentName').value = studentName;

            const form = document.getElementById('editStudentForm');
            form.action = `/teacher/<%= teacher.teacherID %>/edit-student/${studentId}`;

        });
    });
    </script>

</body>
</html>
