<!DOCTYPE html>
<html>
<head>
  <title>Teacher Portal</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
  <h2>Select a Teacher</h2>

  <ul class="list-group mb-3">
    <% if (teachers.length === 0) { %>
      <li class="list-group-item">No teachers found. Please add one in the database.</li>
    <% } else { %>
      <% teachers.forEach(t => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= t.teacherName %> (ID: <%= t.teacherID %>)</span>
          <a href="/entry/<%= t.teacherID %>" class="btn btn-primary btn-sm">Enter Scores</a>
        </li>
      <% }) %>
    <% } %>
  </ul>

  <a href="/teacher-login" class="btn btn-secondary">Teacher Login</a>
</body>
</html>
