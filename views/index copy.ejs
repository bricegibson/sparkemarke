<!DOCTYPE html>
<html>
<head>
  <title>Student Entry</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
  <h2>Enter Student Info</h2>
  <form action="/submit" method="POST">
    <input type="hidden" name="teacherID" value="<%= teacherID %>">

    <div class="mb-3">
      <label>Student ID</label>
      <input type="text" name="studentID" required class="form-control">
    </div>
    <div class="mb-3">
      <label>Name</label>
      <input type="text" name="name" required class="form-control">
    </div>

    <div id="scores-container">
      <div class="score-entry border rounded p-3 mb-2">
        <div class="mb-3">
          <label>Subject</label>
          <select name="subject" required class="form-control">
            <option value="" disabled selected>Select a subject</option>
            <% subjects.forEach(sub => { %>
              <option value="<%= sub.subjectName %>"><%= sub.subjectName %></option>
            <% }) %>
          </select>
        </div>
        <div class="mb-3">
          <label>Date</label>
          <input type="date" name="date" required class="form-control">
        </div>
        <div class="mb-3">
          <label>Score</label>
          <input type="number" name="score" step="0.01" required class="form-control">
        </div>
      </div>
    </div>

    <button type="button" id="addScore" class="btn btn-secondary mb-3">+ Add Another Subject</button>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  <script>
    document.getElementById("addScore").addEventListener("click", () => {
      const container = document.getElementById("scores-container");
      const entry = container.querySelector(".score-entry").cloneNode(true);
      entry.querySelectorAll("input, select").forEach(el => el.value = "");
      container.appendChild(entry);
    });
  </script>
</body>
</html>
